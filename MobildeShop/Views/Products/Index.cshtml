@model IEnumerable<MobildeShop.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách sản phẩm</h2>
<div ng-app="app">
    <div ng-controller="productController">
        <p>
            <button class="btn btn-primary" data-toggle="modal" data-target="#mainModal" ng-click="create()">Thêm mới</button>
        </p>
        <div class="col-md-2">
            <label>Hiển thị: </label><input class="form-control" type="number" min="1" ng-model="displayNum" ng-change="loadProducts(1)" maxlength="3" />
        </div>
        <div class="col-md-6">
            <label>Tìm kiếm: </label><input class="form-control" ng-model="searchText" ng-change="loadProducts(1)" />
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Mã SP
                    </th>
                    <th>
                        Tên SP
                    </th>
                    <th>
                        Mô tả
                    </th>
                    <th>
                        Giá
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in productList">
                    <td>
                        {{item.Code}}
                    </td>
                    <td>
                        {{item.Title}}
                    </td>
                    <td>
                        {{item.Description}}
                    </td>
                    <td>
                        {{item.Price}}
                    </td>
                    <td>
                        <button class="btn btn-default" ng-click="loadProduct(item.id)" data-toggle="modal" data-target="#mainModal">Sửa</button>

                        <button class="btn btn-info">Chi tiết</button>
                        <button class="btn btn-danger">Xóa</button>

                    </td>
                </tr>
            </tbody>

        </table>
        <ul class="pagination" ng-repeat=" i in totalPage">
            <li>
                <button type="button" class="btn btn-default" ng-click="loadProducts(i)">{{i}}</button>
            </li>
        </ul>


        <!-- Modal -->
        <div id="mainModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Thông tin sản phẩm</h4>
                    </div>
                    <div class="modal-body">
                        <div><label>Mã sản phẩm: </label> <input ng-model="product.Code" class="form-control" /></div>
                        <div><label>Tên sản phẩm: </label> <input ng-model="product.Title" class="form-control" /></div>
                        <div><label>Mô tả sản phẩm: </label> <input ng-model="product.Description" class="form-control" /></div>
                        <div><label>Giá sản phẩm: </label> <input ng-model="product.Price" class="form-control" type="number" min="0"/></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" ng-disabled="!product.Code || !product.Title || !product.Description || !product.Price" data-dismiss="modal" ng-click="BtnClick()">{{BtnText}}</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/SPA/productcontroller.js"></script>
    <script src="~/Scripts/SPA/productService.js"></script>
