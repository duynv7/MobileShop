@model IEnumerable<MobildeShop.Models.Order>

@{
    ViewBag.Title = "Index";
}

    <div class="container-fluid">
        <!-- Vertical Layout -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <ol class="breadcrumb breadcrumb-bg-red">
                    <li><a href="index">Tổng quan</a></li>
                    <li class="active">Công nợ</li>
                </ol>
                <div class="card">
                    <div class="header">
                        <h2>
                            THÊM MỚI CÔNG NỢ
                        </h2>
                    </div>
                    <div class="body">
                        <form>
                            <h2 class="card-inside-title">Thông tin khách hàng</h2>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control" placeholder="Tên khách hàng" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control" placeholder="Số điện thoại" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control" placeholder="Email" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control" placeholder="Địa chỉ" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control" placeholder="Ngày sinh" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control" placeholder="Số CMTND" />
                                        </div>
                                    </div>

                                    <h2 class="card-inside-title">Giới tính</h2>
                                    <div class="demo-radio-button">
                                        <input name="group1" type="radio" id="radio_1" checked />
                                        <label for="radio_1">Nam</label>
                                        <input name="group1" type="radio" id="radio_2" />
                                        <label for="radio_2">Nữ</label>
                                    </div>
                                </div>
                            </div>

                            <h2 class="card-inside-title">Thông tin hóa đơn</h2>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control" placeholder="Khách hàng" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control" placeholder="Ngày bán" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control" placeholder="Người bán" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control" placeholder="Ghi chú" />
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <h2 class="card-inside-title">Thông tin thanh toán</h2>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control" placeholder="Tổng tiền phải trả" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control" placeholder="Đã thanh toán" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control" placeholder="Số tháng còn lại cần phải thanh toán" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control" placeholder="Số tiền còn nợ" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control" placeholder="Số tiền phải trả cho mỗi tháng là ... vnđ, trong vòng ... tháng" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" class="form-control" placeholder="Số tiền còn nợ" />
                                        </div>
                                    </div>

                                    <h2 class="card-inside-title">Hình thức thanh toán</h2>
                                    <div class="demo-radio-button">
                                        <input name="group1" type="radio" id="radio_1" checked />
                                        <label for="radio_1">Tiền mặt</label>
                                        <input name="group1" type="radio" id="radio_2" />
                                        <label for="radio_2">Thẻ</label>
                                        <input name="group1" type="radio" id="radio_3" />
                                        <label for="radio_3">CK</label>
                                    </div>
                                </div>
                            </div>

                            <br>
                            <button type="button" class="btn btn-primary m-t-15 waves-effect">Ghi nợ</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Vertical Layout -->

    </div>
