
@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <!-- Vertical Layout -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <ol class="breadcrumb breadcrumb-bg-red">
                <li><a href="index">Tổng quan</a></li>
                <li class="active">Công nợ</li>
            </ol>
            <div class="card">
                <div class="header">
                    <h2>
                        THÊM MỚI CÔNG NỢ
                    </h2>
                </div>
                <div class="body">
                    <form>
                        <h2 class="card-inside-title">Thông tin khách hàng</h2>
                        <div class="row clearfix">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" ng-model="customer.Phone" class="form-control" placeholder="Số điện thoại" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" ng-model="customer.Name" class="form-control" placeholder="Tên khách hàng" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" ng-model="customer.Email" class="form-control" placeholder="Email" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" ng-model="customer.Address" class="form-control" placeholder="Địa chỉ" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="datetime" ng-model="customer.DOB" class="form-control" placeholder="Ngày sinh" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" ng-model="customer.IDNumber" class="form-control" placeholder="Số CMTND" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" ng-model="customer.MonthlyIncome" class="form-control" placeholder="Thu nhập hàng tháng" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <h2 class="card-inside-title">Thông tin hóa đơn</h2>
                        <div class="row clearfix">
                            <div class="col-sm-12">

                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" ng-model="order.DayOfSale" class="form-control" placeholder="Ngày bán" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" ng-model="order.Seller" class="form-control" placeholder="Người bán" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" ng-model="order.Note" class="form-control" placeholder="Ghi chú" />
                                    </div>
                                </div>

                            </div>
                        </div>

                        <h2 class="card-inside-title">Thông tin thanh toán</h2>
                        <div class="row clearfix">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" ng-model="order.TotalAmount" class="form-control" placeholder="Tổng tiền phải trả" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" ng-model="order.PaidAmount" class="form-control" placeholder="Đã thanh toán" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" ng-model="order.DayOfSale" class="form-control" placeholder="Số tháng còn lại cần phải thanh toán" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" ng-model="order.DayOfSale" class="form-control" placeholder="Số tiền còn nợ" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" ng-model="order.MonthlyPay" class="form-control" placeholder="Số tiền phải trả cho mỗi tháng là ... vnđ, trong vòng ... tháng" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" ng-model="order.DayOfSale" class="form-control" placeholder="Số tiền còn nợ" />
                                    </div>
                                </div>

                                <h2 class="card-inside-title">Hình thức thanh toán</h2>
                                <div class="demo-radio-button">
                                    <input name="PayMethod" type="radio" value="1" checked />
                                    <label>Tiền mặt</label>
                                    <input name="PayMethod" type="radio" value="2" />
                                    <label>Thẻ</label>
                                    <input name="PayMethod" type="radio" value="3" />
                                    <label>CK</label>
                                </div>
                            </div>
                        </div>

                        <br>
                        <button type="button" class="btn btn-primary" ng-show="BtnText" ng-disabled="!customer.Phone || !customer.Name || !customer.Address
                                    || !customer.DOB || !customer.IDNumber" data-dismiss="modal" ng-click="BtnClick()">
                            Ghi nợ
                        </button>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Vertical Layout -->

</div>
@section Scripts {
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/SPA/orderController.js"></script>
    <script src="~/Scripts/SPA/orderService.js"></script>
}